{
  "module": {
    "name": "entry",
    "type": "entry",
    "description": "$string:module_desc",
    "mainElement": "EntryAbility",
    "deviceTypes": [
      "phone",
      "tablet",
      "2in1"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "pages": "$profile:main_pages",
//    "requestPermissions": [
//      {
//        "name" : "ohos.permission.READ_IMAGEVIDEO",
//        "reason": "$string:photo_reason",
//        "usedScene": {
//          "abilities": [
//            "EntryAbility"
//          ],
//          "when":"inuse"
//        }
//      }
//    ],
    "abilities": [
      {
        "name": "EntryAbility",
        "srcEntry": "./ets/entryability/EntryAbility.ets",
        "description": "$string:EntryAbility_desc",
        "icon": "$media:launcher",
        "label": "$string:EntryAbility_label",
        "startWindowIcon": "$media:launcher",
        "startWindowBackground": "$color:start_window_background",
        "exported": true,
        "skills": [
          {
            "entities": [
              "entity.system.home",
              "entity.system.browsable",
            ],
            "actions": [
              "action.system.home",
              "ohos.want.action.viewData",
              "ohos.want.action.sendData"
            ],
            "uris": [
              {
                "scheme": "https",
                "host": "sharekitdemo.drcn.agconnect.link",
              },
              {
                "scheme": "file",
                "utd": "general.video",
                "maxFileSupported": 1
              }
            ],
            "domainVerify": true
          }
        ]
      },
      {
        "name": "ShareUIAbility",
        "srcEntry": "./ets/entryability/ShareUIAbility.ets",
        "description": "$string:EntryAbility_desc",
        "icon": "$media:launcher",
        "label": "$string:ShareUIAbility_label",
        "startWindowIcon": "$media:launcher",
        "startWindowBackground": "$color:start_window_background",
        "exported": true,
        "skills": [
          {
            "actions": [
              "ohos.want.action.sendData"
            ],
            "uris": [
              {
                "scheme": "file",
                "utd": "general.text",
                "maxFileSupported": 1
              },
            ]
          }
        ]
      }
    ],
    "extensionAbilities": [
      {
        "name": "ShareExtensionAbility",
        "srcEntry": "./ets/extensionAbility/ShareExtAbility.ets",
        "description": "$string:EntryAbility_desc",
        "icon": "$media:launcher",
        "label": "$string:ShareExtensionAbility_label",
        "type": "share",
        "exported": true,
        "skills": [
          {
            "actions": [
              "ohos.want.action.sendData"
            ],
            "uris": [
              {
                "scheme": "file",
                "utd": "general.image",
                "maxFileSupported": 3
              },
            ]
          }
        ],
        "metadata": [
          {
            "name": "systemShare.uiExtension.layout.preferredHeight",
            "value": "400"
          }
        ]
      }
    ]
  }
}