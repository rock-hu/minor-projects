#ifndef PANDA_PATH_GETTER
#define PANDA_PATH_GETTER

#include "macros.h"
#include "util/path.h"
#include <string>

namespace test::utils {

inline std::string DepAnalyzerTestsBinPathGet()
{
    return std::string("<%= BUILD_FOLDER %>");
}

inline std::string DepAnalyzerTestsPathGet(size_t testFolderNum, size_t testFileNum)
{
    return std::string(std::filesystem::canonical(std::string("<%= TESTS_FOLDER %>") + std::to_string(testFolderNum) +
           ark::es2panda::util::Path::GetPathDelimiter() + std::string("file") +
           std::to_string(testFileNum) + std::string(".ets")));
}

}  // namespace test::utils

#endif
