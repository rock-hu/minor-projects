function callbackNoArgVoid(callback: () => void): void {
    callback();
}

function callbackNoArgInt(callback: () => int): void {
    let x: int = callback();
}

function callbackIntStringBool(callback: (x: int, y: String) => boolean): void {
    let x: boolean = callback(5, "Hello");
}

function main(): void {
    callbackNoArgVoid((): void => {
        console.println("hello");
    });
    callbackNoArgVoid(() => {
        console.println("hello");
    });

    callbackNoArgInt((): int => {
        return new String("hello").length as int;
    });
    callbackNoArgInt(() => {
        return new String("hello").length as int;
    });

    callbackIntStringBool((x: int, y: String): boolean => {
        return y.length == x;
    });
    callbackIntStringBool((x, y) => {
        return y.length == x;
    });
}
