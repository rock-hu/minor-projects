function main() : void {
  let cond: boolean = true;

  // Check conditional expression
  let a: String = "foo";
  let b: String = "bar";
  let c: String = cond ? a : b;
  assert(c == "foo");

  // Check assert statement
  assert(cond);

  // Check if statement
  if (cond) {
    assert(c == "foo");
  }

  // Check for statement
  let i = 0;
  for (i; cond;) {
    i += 3;
    break;
  }
  assert(i == 3);

  // Check while statement
  let while_cond = true
  while (while_cond) {
    while_cond = !cond;
  }
  assert (while_cond == false);

  // Check do-while statement
  do {
    assert (while_cond == false);
  } while (while_cond);
}
