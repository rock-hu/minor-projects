function main() : int
{
    // Since the BoxingLocalClass modifies the 'i' it has to be boxed and use it as a boxed 
    // variable in the NotBoxingLocalClass too
    let i : int = 1;

    class NotBoxingLocalClass
    {
        local_method()
        {
            assert(i == 1);
        }
    }

    class BoxingLocalClass
    {
        local_method()
        {
            assert(i == 1)
            i = 2;
        }
    }

    let nblc = new NotBoxingLocalClass();
    nblc.local_method();

    let blc = new BoxingLocalClass();
    blc.local_method();
    assert(i == 2);
    return 0;
}
