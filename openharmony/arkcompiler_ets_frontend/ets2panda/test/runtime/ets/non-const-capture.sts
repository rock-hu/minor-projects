class C {
    v: int = 0;
    constructor (v: int) {
        this.v = v;
    }
}

function part0() {
    let b = false
    let lam: () => void = () => {
        assert b == true
        b = false
    }
    b = true
    lam()
    assert b == false
}

function part1() {
    let b: byte = 0;
    let s: short = 0;
    let i: int = 0;
    let c: char = 0;
    let lam: () => void = () => {
        assert b == 1;
        assert s == 2;
        assert i == 3;
        assert c == 4;
        b = 5;
        s = 6;
        i = 7;
        c = 8;
    };
    b = 1;
    s = 2;
    i = 3;
    c = 4;
    lam();
    assert b == 5;
    assert s == 6;
    assert i == 7;
    assert c == 8;
}

function part2() {
    let l: long = 0;
    let f: float = 0.0;
    let d: double = 0.0;
    let o = new C(0);
    let lam: () => void = () => {
        assert l == 9;
        assert f == 10.0;
        assert d == 11.0;
        assert o.v == 12;
        l = 13;
        f = 14.0;
        d = 15.0;
        o = new C(16);
    }
    l = 9;
    f = 10.0;
    d = 11.0;
    o = new C(12);
    lam();
    assert l == 13;
    assert f == 14.0;
    assert d == 15.0;
    assert o.v == 16;
}

function main(): void {
    part0();
    part1();
    part2();
    return;
}
