class Person {
    name: String = "Bill";
}

function dummy(): Person | null {
    return null;
}

function main(): void {
  let bill : Person = new Person();
  let name = bill.name;

  assert(name == "Bill");
  assert(name.length == 4);

  name = bill.name;
  assert(name == "Bill");

  let juan: Person | null = dummy();
  name = juan?.name ?? "Juan";
  assert (name.length == 4);

  let test = false;

  assert(juan?.name === undefined);
}
