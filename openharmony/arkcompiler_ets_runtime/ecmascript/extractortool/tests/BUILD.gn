import("//arkcompiler/ets_runtime/js_runtime_config.gni")
import("//arkcompiler/ets_runtime/test/test_helper.gni")

module_output_path = "ets_runtime"

host_unittest_action("ExtractorToolTest") {
  module_out_path = module_output_path

  sources = [
    # test file
    "../src/extractor.cpp",
    "../src/file_mapper.cpp",
    "../src/file_path_utils.cpp",
    "../src/zip_file.cpp",
    "../src/zip_file_reader.cpp",
    "../src/zip_file_reader_io.cpp",
    "../src/zip_file_reader_mem.cpp",
    "extractor_test.cpp",
    "source_map_test.cpp",
    "zip_file_test.cpp",
  ]

  configs = [ "../../../:ecma_test_config" ]

  deps = [
    "$ark_third_party_root/icu/icu4c:shared_icui18n",
    "$ark_third_party_root/icu/icu4c:shared_icuuc",
    "$js_root:libark_jsruntime_test",
  ]

  # hiviewdfx libraries
  external_deps = hiviewdfx_ext_deps
  external_deps += [ "zlib:libz" ]
  deps += hiviewdfx_deps
}

group("unittest") {
  testonly = true
  deps = [ ":ExtractorToolTest" ]
}

group("host_unittest") {
  testonly = true
  deps = [ ":ExtractorToolTestAction" ]
  if (is_mac) {
    deps -= [ ":ExtractorToolTestAction" ]
  }
}
