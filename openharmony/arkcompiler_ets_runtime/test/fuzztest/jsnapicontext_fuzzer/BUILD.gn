##################################hydra-fuzz###################################
import("//arkcompiler/ets_runtime/js_runtime_config.gni")
import("//arkcompiler/ets_runtime/test/test_helper.gni")
import("//build/config/features.gni")
import("//build/ohos.gni")

##################################fuzztest#####################################
ohos_fuzztest("JSNApiContextFuzzTest") {
  module_out_path = ets_runtime_output_path

  fuzz_config_file = "$js_root/test/fuzztest/jsnapicontext_fuzzer"

  sources = [ "jsnapicontext_fuzzer.cpp" ]

  configs = [ "$js_root:ecma_test_config" ]

  deps = [
    "$js_root:libark_jsruntime_test",
    sdk_libc_secshared_dep,
  ]

  # hiviewdfx libraries
  external_deps = hiviewdfx_ext_deps
  deps += hiviewdfx_deps
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":JSNApiContextFuzzTest" ]
}
