##################################hydra-fuzz###################################
import("//arkcompiler/ets_runtime/js_runtime_config.gni")
import("//arkcompiler/ets_runtime/test/test_helper.gni")
import("//build/config/features.gni")
import("//build/ohos.gni")

##################################fuzztest#####################################
ohos_fuzztest("JSValueRefIsListFuzzTest") {
  module_out_path = ets_runtime_output_path

  fuzz_config_file = "$js_root/test/fuzztest/jsvaluerefislist_fuzzer"
  resource_config_file = "$js_root/test/resource/js_runtime/ohos_test.xml"
  sources = [ "jsvaluerefislist_fuzzer.cpp" ]

  configs = [ "$js_root:ecma_test_config" ]

  deps = [ "$js_root:libark_jsruntime_static" ]

  # hiviewdfx libraries
  external_deps = hiviewdfx_ext_deps
  external_deps += [
    "icu:shared_icui18n",
    "icu:shared_icuuc",
    "runtime_core:libarkfile_static",
    sdk_libc_secshared_dep,
  ]
  deps += hiviewdfx_deps
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":JSValueRefIsListFuzzTest" ]
}
