group("ark_jit_ts_test") {
  testonly = true
  test_list = [
    "arguments",
    "create_arguments",
    "function_reuse",
    "try_catch_empty",
    "ldobjbyname",
    "for_loop",
    "typed_array",
    "while_loop",
    "exception",
    "data_view",

    "construct_with_normal_function",
    "addition_assignment",
    "catch_with_osr",
    "jit_test_0001",
    "string_length",
    "ts_inline",
    "proxy_fast_call",
    "fuzz_exception",
    "utf16key",
    "throw_error",
    "compiler_inline",
    "uint32_array",
    "inc",
    "uncheck_float64_to_int32",
  ]

  deps = [ "pgo_roottype_test:pgo_roottype_test" ]
  foreach(test, test_list) {
    deps += [ "${test}:${test}JitAction" ]
  }
}

group("ark_jit_test") {
  testonly = true
  deps = [ ":ark_jit_ts_test" ]

  if (is_mac) {
    deps -= [ ":ark_jit_ts_test" ]
  }
}
