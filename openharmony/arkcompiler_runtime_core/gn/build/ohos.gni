template("ohos_prebuilt_etc") {
  copy("${target_name}") {
    forward_variables_from(invoker,
                           "*",
                           [
                             "subsystem_name",
                             "install_enable",
                             "source",
                             "module_install_dir",
                             "part_name",
                           ])
    sources = [ invoker.source ]
    outputs = [ "${target_out_dir}/${invoker.source}" ]
  }
}
