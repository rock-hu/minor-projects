function heapSortUp(arr: {{T}}[], idxFromStart: int, startIndex: int, heapRoot: int{{arg}}): void {
    const tmp = arr[startIndex + idxFromStart]
    while (startIndex + idxFromStart > heapRoot) {
        const p = (idxFromStart - 1) / 2
