//! CHECKER      Try Catch Resolving JIT IfImm is not replaced by DeoptimizeIf because of the first stmt in try-block isn't SaveState
//! RUN          force_jit: true, options: "--compiler-hotness-threshold=5 --compiler-profiling-threshold=0 --compiler-enable-osr=false --compiler-regex=IfCatch::__noinline__ifCatch", entry: "ETSGLOBAL::main"
//! EVENT        /Compilation,IfCatch::__noinline__ifCatch,.*,COMPILED/
//! METHOD       "IfCatch::__noinline__ifCatch"
//! PASS_AFTER   "Inline"
//! INST_COUNT   "Throw",2
//! PASS_AFTER   "TryCatchResolving"
//! INST_COUNT   "Throw",1
//! INST_NOT     "DeoptimizeIf"

//! CHECKER      Try Catch Resolving AOT IfImm is not replaced by DeoptimizeIf
//! SKIP_IF       @architecture == "arm32"
//! RUN_PAOC     options: "--compiler-regex=IfCatch::__noinline__ifCatch"
//! METHOD       "IfCatch::__noinline__ifCatch"
//! PASS_AFTER   "Inline"
//! INST_COUNT   "Throw",2
//! PASS_AFTER   "TryCatchResolving"
//! INST_COUNT   "Throw",2
//! INST_NOT     "DeoptimizeIf"

class Exception0 extends Exception {}
class Exception1 extends Exception {}

class IfCatch {

  __noinline__ifCatch(k: int) : int {
    let res : int = 0;
    for (let i : int = 0; i < 16; i++) {
      try {
        if (k == 0) {
          res += 1;
          throw new Exception0();
        } else {
          res += 2;
          throw new Exception1();
        }
      } catch (e: Exception0) {
        res += 1;
      } catch (e) {
        res += 2;
      }
    }
    return res;
  }
}

let ic = new IfCatch();

function main(): int {
  let res :int = 0;
  for (let i:int = 1; i < 20; ++i) {
    res += ic.__noinline__ifCatch(i);
  }
  console.log(res);
  return res - 1216;
}
