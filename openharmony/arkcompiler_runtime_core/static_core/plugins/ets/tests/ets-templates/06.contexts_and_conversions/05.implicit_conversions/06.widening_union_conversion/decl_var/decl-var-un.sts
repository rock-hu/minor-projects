{%- for c in cases %}

/*---
desc: >-
    Conversion from a non-union type to a union type.
    Declaration context, variable declaration, widening union conversion, implicit
params: to union type {{c.to_type}}
---*/
{{c.decl}}

{%- for t in c['values'] %}
let s{{loop.index}}: {{t.from_type}} = {{t.expr|safe}};
{%- endfor %}

function main() {
{%- for t in c['values'] %}
    let d{{loop.index}}: {{c.to_type}} = s{{loop.index}}
    assert d{{loop.index}} as {{t.ref_type}} {{t.eq}} {{t.expr|safe}}

    const c{{loop.index}}: {{c.to_type}} = s{{loop.index}}
    assert c{{loop.index}} as {{t.ref_type}} {{t.eq}} {{t.expr|safe}}
{% endfor %}
}
{%- endfor %}
