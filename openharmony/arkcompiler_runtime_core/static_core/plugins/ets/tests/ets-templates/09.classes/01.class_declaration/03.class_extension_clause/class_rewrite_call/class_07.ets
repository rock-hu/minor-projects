/*---
desc: Parent class reference points to child class object.
---*/

class Animal {
  speak() {
    return 1;
  }
}

class Cat extends Animal {
  speak() {
    return 2;
  }
}

function main(): void {
  let myPet: Animal = new Cat();
  let sound = myPet.speak();
  assertEQ(sound, 2);
}