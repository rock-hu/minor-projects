/*---
desc: The consistency and accessibility of member variables in the inheritance chain and demonstrates the effectiveness of the combination of inheritance and modifiers.
---*/

class A {
    protected _publicVar: number[];

    constructor() {
        this._publicVar = [1, 2, 3];
    }
}

class B extends A {

}

class C extends B {

}

class D extends C {

}

class E extends D {

}

class F extends E {
    constructor() {
        this._publicVar
        assertEQ(this._publicVar[0], 1);
    }
    test(){
        assertEQ(this._publicVar[0], 1);
    }
}

function main(): void {
    let f: F = new F();
    f.test();
}