/*---
desc: Verify that a child class can access a Date constant returned by a function in an interface.
---*/

interface ReturnDateConstantInterface {
  readonly CONST: () => Date;
}

class ReturnDateConstantChild implements ReturnDateConstantInterface {
  readonly CONST = () => new Date('2023-01-01');
}

function main(): void {
  const instance = new ReturnDateConstantChild();
  const actualDate = instance.CONST().toISOString().split('T')[0];
  assertEQ(actualDate, '2023-01-01');
}