type Margin = number | string

function formatNumber(n: string) {
    assert n == "5 px"
}

function formatMargin(margin: Margin) {
    if (margin instanceof string) {
        formatNumber(margin as string)
    }
}

function main(): void {
    formatMargin("5 px")
    let a: Margin = "5 px"
    formatMargin(a)
}
