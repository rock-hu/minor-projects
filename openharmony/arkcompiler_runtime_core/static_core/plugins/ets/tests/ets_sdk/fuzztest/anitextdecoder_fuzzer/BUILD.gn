import("//build/config/features.gni")
import("//build/test.gni")

import("//arkcompiler/runtime_core/static_core/ark_root.gni")
import("../fuzzer.gni")

##############################fuzztest##########################################
ohos_fuzztest("AniTextDecoderFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "."

  include_dirs = [
    "../common",
    "$ark_root/plugins/ets/stdlib/native",
    "$ark_root/plugins/ets/runtime/ani",
    "$ark_root/plugins/ets/sdk/native",
    "$ark_root/libpandabase",
  ]

  configs = [ "$ark_root:ark_config" ]
  deps = [ "$ark_root:ark_packages" ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "anitextdecoder_fuzzer.cpp" ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":AniTextDecoderFuzzTest",
  ]
}
