    let target2: {{.item.objectType}};
    try {
        target2 = new {{.item.objectType}}(new ArrayBuffer(source.length as int * {{.item.primitiveSizeBytes}}));
    } catch(e) {
        return fail;
    }
    for (let i: int = 0; i < source.length; i++) {
        try {
