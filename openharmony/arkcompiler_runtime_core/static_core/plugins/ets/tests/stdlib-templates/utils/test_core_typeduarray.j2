function assertArrayEqualsToTypedArray(source: {{.item.type}}[], origin: {{.item.objectType}}): int {
    if (origin.length as int != source.length as int) {
        return fail;
    }
    for (let i: int; i< origin.length; i++) {
        let tv: {{.item.type}} = origin[i] as {{.item.type}};
        let sv: {{.item.type}} = source[i];
        if (tv != sv) {
            console.println("Unexpected data changed at [" + i + "] " + sv + "->" + tv);
            return fail;
        }
    }
    return success;
}

