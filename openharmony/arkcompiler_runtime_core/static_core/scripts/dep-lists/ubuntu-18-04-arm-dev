# Dependency list for testing Panda on Ubuntu 18.04
clang-14=1:14.*
clang-format-14=1:14.*
clang-tidy-14=1:14.*
libstdc++6=13.1.0-*

g++-8=8.4.0-*
ninja-build=1.8.*

lcov=1.13-*                                          # For coverage calculation
libc++-dev:arm64=6.0-*                               # For clang-tidy to find standard header
python3-pip
python3-setuptools
python3.8=3.8.0*                                     # For running multilingual benchmarks
python3.8-dev=3.8.0*                                 # For running multilingual benchmarks
python3.8-venv=3.8.0*
openjdk-8-jdk                                        # For running Java benchmarks
libasm-java=7.0-*                                    # For running legacy Java files compilation
doxygen=1.8.13-*                                     # For generate documentation
graphviz=2.40.1-*                                    # For generate graphs in documentation
unzip=6.0-*                                          # For unpacking jar
parallel=20161222-*                                  # For rt.jar test
libdwarf-dev=20180129-*                              # For printing function names and line numbers
gdb-multiarch=8.1.1-*                                # GDB with support for multiple architectures

llvm-14=1:14*                                        # For Thread Sanitizer
