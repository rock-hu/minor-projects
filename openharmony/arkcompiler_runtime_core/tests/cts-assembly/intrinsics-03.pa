#Assert that intrinsic Math.absF64 works fine
.record Math <external>
.function f32 Math.absF32(f32 a0)<external>
.function i32 main(){
    fmovi v0, 2.0
    fmovi v1, 1e-13
    call.short Math.absF32, v0, v0
    fsub2 v0
    sta v2
    call.short abs, v2, v2
    fcmpl v1
    jgtz exit_failure
    fmovi v0, -2.0
    call.short Math.absF32, v0, v0
    fadd2 v0
    sta v2
    call.short abs, v2, v2
    fcmpl v1
    jgtz exit_failure
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

.function f32 abs(f32 a0){
    fldai 0.0
    fcmpl a0
    jlez label
    lda a0
    fneg
    return
label:
    lda a0
    return
}

