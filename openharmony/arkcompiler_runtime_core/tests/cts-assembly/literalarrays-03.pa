#assert that operations with array of f64 works fine
#f64[] array = [0, 1, 2, 3, 4, 5, 6];
#for(i=6; i>=0; i--) assert_eq(i, array[i]);

.array array_f64 f64 7 {0 1 2 3 4 5 6}

.function i32 main(){
    lda.const v0, array_f64
    movi v1, 6
    ldai 6
loop:
    jltz loop_exit
    lda v1
    i32tof64
    sta.64 v2
    lda v1
    fldarr.64 v0
    fsub2.64 v2
    sta.64 v2
    call.short abs, v2, v2
    sta.64 v2
    fldai.64 1e-13
    fcmpl.64 v2
    jlez exit_failure
    inci v1, -1
    lda v1
    jmp loop
loop_exit:
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

.function f64 abs(f64 a0){
    fldai.64 0.0
    fcmpl.64 a0
    jlez label
    lda.64 a0
    fneg.64
    return.64
label:
    lda.64 a0
    return.64
}