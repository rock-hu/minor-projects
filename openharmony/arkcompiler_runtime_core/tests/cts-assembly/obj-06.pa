# Assert that operations ldobj, ldobj.64 work fine

.record Asm {
    i32 asm1
    i64 asm2
    f64 asm3
}

.function void Asm.Construct(Asm a0) <ctor> {
    ldai 0xFFFFFFFF
    stobj a0, Asm.asm1

    ldai.64 0xFFFFFFFFFFFFFFFF
    movi.64 v0, 32
    shl2.64 v0
    stobj.64 a0, Asm.asm2

    fldai.64 1.0
    stobj.64 a0, Asm.asm3

    return.void
}

.function i32 main() {
    movi v1, 0xFFFFFFFF

    ldai.64 0xFFFFFFFFFFFFFFFF
    movi.64 v0, 32
    shl2.64 v0
    sta.64 v2

    fmovi.64 v3, 1.0

    initobj.short Asm.Construct
    sta.obj v0

    ldobj v0, Asm.asm1
    jne v1, exit_failure

    ldobj.64 v0, Asm.asm2
    cmp.64 v2
    jnez exit_failure

    ldobj.64 v0, Asm.asm3
    fcmpg.64 v3
    jnez exit_failure

    ldai 0
    return

exit_failure:
    ldai 1
    return
}
