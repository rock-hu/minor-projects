##################################fuzztest#####################################
ohos_fuzztest("PtTypesBreakpointParseIdFuzzTest") {
  module_out_path = toolchain_output_path

  fuzz_config_file =
      "//arkcompiler/toolchain/test/fuzztest/pttypesbreakpointparseid_fuzzer"

  sources = [ "pttypesbreakpointparseid_fuzzer.cpp" ]

  configs = [ "//arkcompiler/toolchain:toolchain_test_config" ]

  deps = [ "../../../tooling:libark_ecma_debugger_set" ]

  # hiviewdfx libraries
  external_deps = hiviewdfx_ext_deps
  external_deps += [
    "cJSON:cjson",
    "ets_runtime:libark_jsruntime",
    "libuv:uv",
    sdk_libc_secshared_dep,
  ]
  deps += hiviewdfx_deps
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":PtTypesBreakpointParseIdFuzzTest" ]
}
