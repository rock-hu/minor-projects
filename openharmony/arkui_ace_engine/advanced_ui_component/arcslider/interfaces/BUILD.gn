import("//build/config/components/ets_frontend/es2abc_config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")
import("//foundation/arkui/ace_engine/adapter/preview/build/config.gni")
import("//foundation/arkui/ace_engine/build/ace_gen_obj.gni")

es2abc_gen_abc("gen_arcslider_abc") {
  src_js = rebase_path("arcslider.js")
  dst_file = rebase_path(target_out_dir + "/arcslider.abc")
  in_puts = [ "arcslider.js" ]
  out_puts = [ target_out_dir + "/arcslider.abc" ]
  extra_args = [ "--module" ]
}

gen_js_obj("arcslider_abc") {
  input =
      get_label_info(":gen_arcslider_abc", "target_out_dir") + "/arcslider.abc"
  output = target_out_dir + "/arcslider_abc.o"
  dep = ":gen_arcslider_abc"
}

gen_obj("arcslider_abc_preview") {
  input =
      get_label_info(":gen_arcslider_abc", "target_out_dir") + "/arcslider.abc"
  output = target_out_dir + "/arcslider_abc.c"
  snapshot_dep = [ ":gen_arcslider_abc" ]
}

ohos_shared_library("arcslider") {
  sources = [ "arcslider.cpp" ]

  if (use_mingw_win || use_mac || use_linux) {
    deps = [ ":gen_obj_src_arcslider_abc_preview" ]
  } else {
    deps = [ ":arcslider_abc" ]
  }

  external_deps = [
    "hilog:libhilog",
    "napi:ace_napi",
  ]

  relative_install_dir = "module/arkui/advanced"
  subsystem_name = ace_engine_subsystem
  part_name = ace_engine_part
}
