import("//build/ohos.gni")


ohos_app("statemgmt_ut_hap") {

  deps = [
    ":state_mgmt_js_assets",
  ]

  certificate_profile = "signature/stm.p7b"
  testonly = true
  part_name = "ace_engine"
  subsystem_name = "arkui"
  # Will expand to ./out/rk3568/obj/foundation/arkui/ace_engine/test/unittest/statemgmt_ut/StateMgmtTest.hap
  hap_out_dir = "${target_out_dir}"
  module_install_dir = "app/com.arkui.statemgmt.ut"
  hap_name = "StateMgmtTest"
  js_build_mode = "release"
  sdk_home = "//prebuilts/ohos-sdk/linux"
  sdk_type_name = [ "sdk.dir" ]
  assemble_type = "assembleHap"
  build_level = "module"
  build_modules = [ "entry" ]

}

ohos_js_assets("state_mgmt_js_assets") {
  ets2abc = true
  source_dir = "entry/src/main/ets"
}
