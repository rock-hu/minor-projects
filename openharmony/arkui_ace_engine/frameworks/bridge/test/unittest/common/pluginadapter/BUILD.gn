import("//build/test.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")

module_output_path = "ace_engine_full/jsplugin"

ohos_unittest("PluginAdapterTest") {
  module_out_path = module_output_path

  sources = [ "plugin_adapter_test.cpp" ]

  configs = [
    ":config_plugin_adapter_test",
    "$ace_root:ace_test_config",
  ]

  deps = [
    "$ace_root/build:ace_ohos_unittest_base",
    "//third_party/googletest:gmock_main",
  ]

  part_name = ace_engine_part
}

config("config_plugin_adapter_test") {
  visibility = [ ":*" ]
  include_dirs = [ "$ace_root" ]
}

group("unittest") {
  testonly = true
  deps = [ ":PluginAdapterTest" ]
}
