import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("//foundation/arkui/ace_engine/ace_config.gni")

config("ani_config") {
  include_dirs = [
    "${ace_root}/frameworks",
    "${ace_root}/interfaces",
    "${ace_root}",
  ]
}

#构建ANI库
ohos_shared_library("observer_ani") {
  deps = [ "$ace_root/build:libace_compatible" ]
  include_dirs = [ "./include" ]
  sources = [ "./src/observer.cpp" ]
  external_deps = [
    "napi:ace_napi",
    "runtime_core:ani",
  ]
  configs = [ "$ace_root:ace_config" ]
  part_name = "ace_engine"
  subsystem_name = "arkui"
  output_extension = "so"
}

#构建abc
generate_static_abc("observer") {
  paths_keys = [ "@ohos.arkui.observer" ]
  base_url = "./ets"
  files = [ "./ets/@ohos.arkui.observer.ets" ]
  paths_values = [ "./ets/@ohos.arkui.observer.ets" ]
  dst_file = target_out_dir + "/observer.abc"
  out_puts = [ target_out_dir + "/observer.abc" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/observer.abc"
}

ohos_prebuilt_etc("observer_etc") {
  source = "$target_out_dir/observer.abc"
  module_install_dir = "framework"
  part_name = "ace_engine"
  subsystem_name = "arkui"
  deps = [ ":observer" ]
}