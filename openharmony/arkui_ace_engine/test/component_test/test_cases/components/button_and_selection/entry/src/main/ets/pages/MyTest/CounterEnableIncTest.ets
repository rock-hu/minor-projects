import {
  assertFalse,
  assertTrue,
  Component,
  defineTest,
  Matcher,
  TestCaseLevel,
  Tester
} from '@ohos.arkui.componentTest'

export default async function counterEnableIncTest() {
  /*
   * Counter组件 EnableInc属性
   * 找到画面id为counterEnableInc的Counter组件
   * 找到画面文本为CounterEnableInc的Button组件
   * 获取counterEnableInc的EnableInc属性与期待值false比对
   * 点击button1，变更counterEnableInc的EnableInc属性值为true
   * 获取counterEnableInc的EnableInc属性与期待值true比对
   */
  defineTest('counterEnableIncTestDemo', {
    level: TestCaseLevel.LEVEL0
  }, async () => {
    console.log('counterEnableIncTestDemo running')
    let driver: Tester = Tester.create()
    let counterEnableInc: Component = await driver.findComponent(Matcher.create().id('counterEnableInc').enabled(true))
    let button1: Component = await driver.findComponent(Matcher.create().text('CounterEnableInc').enabled(true))

    let enableInc1: string = await counterEnableInc.getInspectorInfo()
    assertFalse(JSON.parse(enableInc1).$attrs.enableInc == undefined)
    assertFalse(JSON.parse(enableInc1).$attrs.enableInc)

    await button1.tap()
    let enableInc2: string = await counterEnableInc.getInspectorInfo()
    assertTrue(JSON.parse(enableInc2).$attrs.enableInc)
  })
}