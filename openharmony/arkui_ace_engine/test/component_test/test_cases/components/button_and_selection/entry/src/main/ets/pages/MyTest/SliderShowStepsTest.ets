import {
  assertFalse,
  assertTrue,
  Component,
  defineTest,
  Matcher,
  TestCaseLevel,
  Tester
} from '@ohos.arkui.componentTest'

export default async function sliderShowStepsTest() {
  /*
   * Slider组件 ShowSteps属性
   * 找到画面id为sliderShowSteps的Slider组件
   * 找到画面文本为SliderShowSteps的Button组件
   * 获取sliderShowSteps的ShowSteps属性与期待值true比对
   * 点击button，变更sliderShowSteps的ShowSteps属性值为false
   * 获取sliderShowSteps的ShowSteps属性与期待值false比对
   */
  defineTest('sliderShowStepsTestDemo', {
    level: TestCaseLevel.LEVEL0
  }, async () => {
    console.log('sliderShowStepsTestDemo running')
    let driver: Tester = Tester.create()
    let sliderShowSteps: Component = await driver.findComponent(Matcher.create().id('sliderShowSteps').enabled(true))
    let button: Component = await driver.findComponent(Matcher.create().text('SliderShowSteps').enabled(true))

    let showSteps1: string = await sliderShowSteps.getInspectorInfo()
    assertTrue(JSON.parse(showSteps1).$attrs.showSteps)

    await button.tap()
    let showSteps2: string = await sliderShowSteps.getInspectorInfo()
    assertFalse(JSON.parse(showSteps2).$attrs.showSteps)
  })
}