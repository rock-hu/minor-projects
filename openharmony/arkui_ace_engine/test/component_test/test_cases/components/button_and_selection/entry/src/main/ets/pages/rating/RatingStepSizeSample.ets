// 测试代码路径
import ratingStepSizeTest from '../MyTest/RatingStepSizeTest'
import { loadComponentTestEntry } from '@ohos.arkui.componentTest'

@Entry
@Component
struct RatingStepSizeSample {
  @State stepSizeTest: number = 0.2

  aboutToAppear(): void {
    loadComponentTestEntry(ratingStepSizeTest)
  }

  build() {
    Column() {
      Rating().stars(5).stepSize(0.5).id('ratingStepSize1')
      Rating().stars(5).stepSize(this.stepSizeTest).id('ratingStepSize2')

      Button('RatingStepSize').onClick(() => {
        this.stepSizeTest = 5
      })
    }.width('100%').height('100%').backgroundColor('#F1F3F5')
  }
}