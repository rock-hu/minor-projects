import grayScaleTest from '../MyTest/GrayScaleTest'
import { loadComponentTestEntry } from '@ohos.arkui.componentTest'

@Entry
@Component
struct GrayScaleSample {
  aboutToAppear(): void {
    loadComponentTestEntry(grayScaleTest)
  }

  @State grayScaleNumber: number = 1

  build() {
    Column() {
      Image($r('app.media.app_icon'))
        .width('500px').height('280px')
        .id('imageGrayscale1')
        .grayscale(this.grayScaleNumber)

      Button('ButtonGrayScale1')
        .onClick(() => {
          this.grayScaleNumber = -1
        })
      Button('ButtonGrayScale2')
        .onClick(() => {
          this.grayScaleNumber = 2
        })
    }
  }
}