import { assertEqual, assertContain, assertFalse, assertTrue } from '@ohos.arkui.componentTest';
import { TestCaseLevel, defineTest } from '@ohos.arkui.componentTest'
import { Tester, Component, Matcher } from '@ohos.arkui.componentTest'

export default async function ellipseStrokeDashArrayTest() {
  /*
   * Ellipse组件 strokeDashArray属性
   * 找到画面id为ellipseStrokeDashArray的Ellipse组件
   * 找到画面文本为EllipseStrokeDashArray的Button组件
   * 获取ellipse的strokeDashArray属性属性与期待值[1, 2]比对
   * 点击button，变更ellipse的strokeDashArray属性属性值为[5, 10]
   * 获取ellipse的strokeDashArray属性属性与期待值[5, 10]比对
   */
  defineTest('ellipseStrokeDashArrayTestDemo', {
    level: TestCaseLevel.LEVEL0
  }, async () => {
    console.log("ellipseStrokeDashArrayTestDemo running")
    let driver: Tester = Tester.create()
    let ellipse: Component = await driver.findComponent(Matcher.create().id('ellipseStrokeDashArray').enabled(true))
    let button: Component = await driver.findComponent(Matcher.create().text('EllipseStrokeDashArray').enabled(true))

    let strokeDashArray1: string = await ellipse.getInspectorInfo()
    assertEqual(JSON.parse(strokeDashArray1).$attrs.strokeDashArray[0], '1.00vp')
    assertEqual(JSON.parse(strokeDashArray1).$attrs.strokeDashArray[1], '2.00vp')
    await button.tap()
    let strokeDashArray2: string = await ellipse.getInspectorInfo()
    assertEqual(JSON.parse(strokeDashArray2).$attrs.strokeDashArray[0], '5.00vp')
    assertEqual(JSON.parse(strokeDashArray2).$attrs.strokeDashArray[1], '10.00vp')
  }, 0)
}