// 测试代码路径
import circleStrokeWidthTest from '../MyTest/CircleStrokeWidthTest'
import { loadComponentTestEntry } from '@ohos.arkui.componentTest'

@Entry
@Component
struct CircleStrokeWidthSample {
  @State circleStrokeWidthValue: string | Resource = '10px'

  aboutToAppear(): void {
    loadComponentTestEntry(circleStrokeWidthTest)
  }

  build() {
    Column({ space: 10 }) {
      Circle({ width: 150, height: 150 })
        .fill(Color.White)
        .stroke(Color.Black)
        .strokeWidth(10)
        .id('circleStrokeWidth1')
      Circle({ width: 150, height: 150 })
        .fill(Color.White)
        .stroke(Color.Black)
        .strokeWidth(this.circleStrokeWidthValue)
        .id('circleStrokeWidth2')
      Button('CircleStrokeWidth')
        .onClick(() => {
          this.circleStrokeWidthValue = $r('app.string.stroke_width')
        })
    }
  }
}