// 测试代码路径
import polylineStrokeLineJoinTest from '../MyTest/PolylineStrokeLineJoinTest'
import { loadComponentTestEntry } from '@ohos.arkui.componentTest'

@Entry
@Component
struct PolylineStrokeLineJoinSample {
  @State PolylineStrokeLineJoinType: LineJoinStyle = LineJoinStyle.Round

  aboutToAppear(): void {
    loadComponentTestEntry(polylineStrokeLineJoinTest)
  }

  build() {
    Column({ space: 10 }) {
      Polyline()
        .width(100)
        .height(100)
        .stroke(Color.Red)
        .strokeWidth(8)
        .points([[20, 0], [0, 100], [100, 90]])
        .strokeLineJoin(LineJoinStyle.Bevel)
        .id('polylineStrokeLineJoin1')
      Polyline()
        .width(100)
        .height(100)
        .stroke(Color.Red)
        .strokeWidth(8)
        .points([[20, 0], [0, 100], [100, 90]])
        .strokeLineJoin(this.PolylineStrokeLineJoinType)
        .id('polylineStrokeLineJoin2')
      Button('PolylineStrokeLineJoin')
        .onClick(() => {
          this.PolylineStrokeLineJoinType = LineJoinStyle.Miter
        })
    }.width('100%')
  }
}