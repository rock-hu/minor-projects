import {
  assertEqual,
  assertFalse,
  assertTrue,
  Component,
  defineTest,
  Matcher,
  TestCaseLevel,
  Tester
} from '@ohos.arkui.componentTest'

/*
* Image组件 MatchTextDirection属性
* 找到画面id为imageMatchTextDirection的Image组件
* 找到画面文本为ImageMatchTextDirection的Button组件
* 获取image的MatchTextDirection属性与期待值True比对
* 点击button1，变更image的MatchTextDirection属性值为False
* 获取image的MatchTextDirection属性与期待值False比对
*/

export default async function imageMatchTextDirectionTest() {
  defineTest('imageMatchTextDirectionTestDemo', {
    level: TestCaseLevel.LEVEL0
  }, async () => {
    console.log("imageMatchTextDirectionTestDemo running")
    let driver: Tester = Tester.create()
    let image: Component = await driver.findComponent(Matcher.create().id('imageMatchTextDirection').enabled(true))
    let button: Component = await driver.findComponent(Matcher.create().text('ImageMatchTextDirection').enabled(true))
    let matchTextDirection1: string = await image.getInspectorInfo()
    assertTrue(JSON.parse(matchTextDirection1).$attrs.matchTextDirection)
    await button.tap()
    let matchTextDirection2: string = await image.getInspectorInfo()
    assertFalse(JSON.parse(matchTextDirection2).$attrs.matchTextDirection)
  }, 0)
}