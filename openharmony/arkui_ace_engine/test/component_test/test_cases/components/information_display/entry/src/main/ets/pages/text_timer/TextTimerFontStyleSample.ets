import textTimerFontStyleTest from '../MyTest/TextTimerFontStyleTest'
import { loadComponentTestEntry } from '@ohos.arkui.componentTest'

@Entry
@Component
struct TextTimerFontStyleSample {
  @State buttonItalic: FontStyle = FontStyle.Normal

  aboutToAppear(): void {
    loadComponentTestEntry(textTimerFontStyleTest)
  }

  build() {
    Column({ space: 8 }) {
      TextTimer().fontStyle(this.buttonItalic).id('textTimerFontStyle')
      Button('TextTimerFontStyle')
        .onClick(() => {
          this.buttonItalic = FontStyle.Italic
        })
    }
  }
}