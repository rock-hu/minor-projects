import { assertEqual, Component, defineTest, Matcher, TestCaseLevel, Tester } from '@ohos.arkui.componentTest'

export default async function dividerStrokeWidthTest() {
  /*
   * Divider组件 StrokeWidth 属性
   * 找到画面id为dividerStrokeWidth1,dividerStrokeWidth2的Divider组件
   * 找到画面文本为DividerStrokeWidth的Button组件
   * 获取dividerStrokeWidth1的StrokeWidth属性与期待值'50.00vp'比对
   * 点击button，变更dividerStrokeWidth1的StrokeWidth属性值为'200vp'
   * 获取dividerStrokeWidth1的StrokeWidth属性与期待值'200.00vp'比对
   * 获取dividerStrokeWidth2的StrokeWidth属性与期待值'5000.00vp'比对
   */
  defineTest('dividerStrokeWidthTestDemo', {
    level: TestCaseLevel.LEVEL0
  }, async () => {
    console.log('dividerStrokeWidthTestDemo running')
    let driver: Tester = Tester.create()
    let dividerStrokeWidth1: Component =
      await driver.findComponent(Matcher.create().id('dividerStrokeWidth1').enabled(true))
    let dividerStrokeWidth2: Component =
      await driver.findComponent(Matcher.create().id('dividerStrokeWidth2').enabled(true))
    let button: Component = await driver.findComponent(Matcher.create().text('DividerStrokeWidth').enabled(true))

    let strokeWidth1: string = await dividerStrokeWidth1.getInspectorInfo()
    assertEqual(JSON.parse(strokeWidth1).$attrs.strokeWidth, '50.00vp')

    await button.tap()
    let strokeWidth2: string = await dividerStrokeWidth1.getInspectorInfo()
    assertEqual(JSON.parse(strokeWidth2).$attrs.strokeWidth, '200.00vp')

    let strokeWidth3: string = await dividerStrokeWidth2.getInspectorInfo()
    assertEqual(JSON.parse(strokeWidth3).$attrs.strokeWidth, '5000.00vp')
  }, 0)
}