import { loadComponentTestEntry } from '@ohos.arkui.componentTest'
import patternLockSideLengthTest from '../MyTest/PatternLockSideLengthTest'

@Entry
@Component
struct PatternLockSideLengthSample {
  @State sideLengthType: Length = 200

  aboutToAppear(): void {
    loadComponentTestEntry(patternLockSideLengthTest)
  }

  build() {
    Column() {
      PatternLock()
        .sideLength(this.sideLengthType)
        .id('patternLockSideLength1')
      Button('PatternLockSideLength')
        .onClick(() => {
          this.sideLengthType = '100px'
        })
      PatternLock()
        .sideLength($r('app.string.vp_length'))
        .id('patternLockSideLength2')
    }
  }
}