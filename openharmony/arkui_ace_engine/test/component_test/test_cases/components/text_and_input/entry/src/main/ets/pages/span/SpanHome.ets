import { CommonButton } from '../../util/CommonButton';

@Entry
@Component
struct SpanHome {
  build() {
    Scroll() {
      Flex({ direction: FlexDirection.Row, wrap: FlexWrap.Wrap }) {
        Text('textHome')
          .padding('15vp')
          .width('100%')
          .fontSize('25fp')
          .textAlign(TextAlign.Center)

        CommonButton({ buttonName: 'SpanDecoration', buttonUrl: 'pages/span/SpanDecorationSample' });
        CommonButton({ buttonName: 'SpanFontColor', buttonUrl: 'pages/span/SpanFontColorSample' });
        CommonButton({ buttonName: 'SpanFontFamily', buttonUrl: 'pages/span/SpanFontFamilySample' });
        CommonButton({ buttonName: 'SpanFont', buttonUrl: 'pages/span/SpanFontSample' });
        CommonButton({ buttonName: 'SpanFontSize', buttonUrl: 'pages/span/SpanFontSizeSample' });
        CommonButton({ buttonName: 'SpanFontStyle', buttonUrl: 'pages/span/SpanFontStyleSample' });
        CommonButton({ buttonName: 'SpanFontWeight', buttonUrl: 'pages/span/SpanFontWeightSample' });
        CommonButton({ buttonName: 'SpanLetterSpacing', buttonUrl: 'pages/span/SpanLetterSpacingSample' });
        CommonButton({ buttonName: 'SpanLineHeight', buttonUrl: 'pages/span/SpanLineHeightSample' });
        CommonButton({ buttonName: 'SpanTextCase', buttonUrl: 'pages/span/SpanTextCaseSample' });
        CommonButton({ buttonName: 'SpanTextShadow', buttonUrl: 'pages/span/SpanTextShadowSample' });
      }
      .padding('5vp')
      .width('100%')
    }.margin({ bottom: 60 })
    .width('100%')
  }
}