import { loadComponentTestEntry } from '@ohos.arkui.componentTest'
import textAreaFontFamilyTest from '../MyTest/TextAreaFontFamilyTest'
import font from '@ohos.font';

@Entry
@Component
struct TextAreaFontFamilySample {
  @State fontFamilyType: string = 'Arial'
  @State text: string = ''

  aboutToAppear() {
    font.registerFont({
      familyName: 'TESTFONTRawFile',
      familySrc: $rawfile('TESTFONT.TTF')
    })
    loadComponentTestEntry(textAreaFontFamilyTest)
  }

  build() {
    Column() {
      TextArea()
        .fontFamily(this.fontFamilyType)
        .margin({ bottom: 10 })
        .id('textAreaFontFamily')
      Button('TextAreaFontFamily')
        .onClick(() => {
          this.fontFamilyType = 'TESTFONTRawFile'
        })
    }
  }
}