    "$ace_root/test/mock/base/mock_system_properties.cpp",
    "$ace_root/test/mock/adapter/mock_log_wrapper.cpp",
  ]
  external_deps = [
    "googletest:gmock",
    "googletest:gtest_main",
    "hilog:libhilog",
    "libxml2:libxml2",
  ]
  configs = [ "$ace_root/test/unittest:ace_unittest_config" ]
}