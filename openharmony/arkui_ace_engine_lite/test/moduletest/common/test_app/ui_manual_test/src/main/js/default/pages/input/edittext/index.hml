<div class="container">
     <input id="input1" class="input" type="text" placeholder="{{placeholder}}" maxlength="{{maxlen}}"  value="{{inputvalue}}"
            style="font-size: {{fontsize}}; color: {{inputcolor}}; placeholder-color: {{phcolor}};" on:change="onvaluechange">
     </input>
     <div class="div-button">
          <input id="button1" class="button" type="button" value="change type" on:click="clickChangeType">
          </input>
          <input id="button2" class="button" type="button" value="change value" on:click="clickChangeValue">
          </input>
          <input id="button3" class="button" type="button" value="change placeholder" on:click="clickChangePlaceholder">
          </input>
          <input id="button4" class="button" type="button" value="change maxlength" on:click="clickChangeMaxlength">
          </input>
          <input id="button5" class="button" type="button" value="change color" on:click="clickChangeColor">
          </input>
          <input id="button6" class="button" type="button" value="change font-size" on:click="clickChangeFontSize">
          </input>
          <input id="button7" class="button" type="button" value="change placeholder-color" on:click="clickChangePHColor">
          </input>
     </div>
</div>

