import("//build/ohos.gni")
import("//build/test.gni")
import("//foundation/arkui/napi/napi.gni")

ohos_unittest("test_jsvm") {
  module_out_path = "node/unittest"
  include_dirs = []

  cflags = [ "-g3" ]

  sources = [ "test_jsvm.cpp" ]
  deps = [ "../../../jsvm:libjsvm" ]
  defines = []
  if (use_clang_coverage) {
    defines += [ "CLANG_COVERAGE" ]
  }
  external_deps = [
    "googletest:gtest",
    "googletest:gtest_main",
    "libuv:uv",
    "node:node_header_notice",
  ]
}

group("jsvm_unittest") {
  testonly = true
  deps = [ ":test_jsvm" ]
}
